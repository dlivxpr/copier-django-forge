networks:
  nginx-network:
    external: true
  {{project_slug}}-network:
    driver: bridge
    internal: true

volumes:
  {{project_slug}}_static:
    name: {{project_slug}}_static
  {{project_slug}}_media:
    name: {{project_slug}}_media
  {{project_slug}}_db:
    name: {{project_slug}}_db
  {{project_slug}}_redis:
    name: {{project_slug}}_redis

services:
  {{project_slug}}-nginx:
    image: nginx:1.27-alpine
    container_name: {{project_slug}}-nginx
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - {{project_slug}}_static:/var/www/static
      - {{project_slug}}_media:/var/www/media
    networks:
      - nginx-network
      - {{project_slug}}-network
    depends_on:
      web:
        condition: service_started
    healthcheck:
      test: ["CMD-SHELL", "nginx -t >/dev/null 2>&1 || exit 1"] 
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped

  db:
    image: postgres:15-alpine
    container_name: {{project_slug}}-db
    env_file:
      - .env
    environment:
      POSTGRES_DB: ${DB_NAME:-{{project_slug}}}
      POSTGRES_USER: ${DB_USER:-{{project_slug}}}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-{{project_slug}}}
    volumes:
      - {{project_slug}}_db:/var/lib/postgresql/data
    healthcheck:
      # 更新 healthcheck 以使用新端口
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER:-{{project_slug}}} -d ${DB_NAME:-{{project_slug}}}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - {{project_slug}}-network
    restart: unless-stopped

  redis:
    image: redis:7.4.5-alpine
    container_name: {{project_slug}}-redis
    command: ["redis-server", "--appendonly", "yes"]
    volumes:
      - {{project_slug}}_redis:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - {{project_slug}}-network
    restart: unless-stopped

  web:
    image: {{project_slug}}:latest
    build:
      context: ..
      dockerfile: Dockerfile
      tags:
        - {{project_slug}}:${VERSION:-0.1.0}
        - {{project_slug}}:latest
    container_name: {{project_slug}}
    env_file: .env
    environment:
      DB_HOST: db
      REDIS_HOST: redis
      FORCE_SCRIPT_NAME: /{{project_slug}}
    working_dir: /app
    expose:
      - "8000"
    volumes:
      - {{project_slug}}_static:/app/static
      - {{project_slug}}_media:/app/media
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD-SHELL", "python manage.py migrate --check"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s
    networks:
      - {{project_slug}}-network
    restart: unless-stopped

  celery-worker:
    image: {{project_slug}}:latest
    container_name: {{project_slug}}-celery-worker
    env_file:
      - .env
    environment:
      DB_HOST: db
      REDIS_HOST: redis
    working_dir: /app
    entrypoint: []
    command: celery -A {{project_slug}} worker -l info
    depends_on:
      web:
        condition: service_healthy
      db:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - {{project_slug}}-network
    restart: unless-stopped

  celery-beat:
    image: {{project_slug}}:latest
    container_name: {{project_slug}}-celery-beat
    env_file:
      - .env
    environment:
      DB_HOST: db
      REDIS_HOST: redis
    working_dir: /app
    entrypoint: []
    command: celery -A {{project_slug}} beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler
    depends_on:
      web:
        condition: service_healthy
      db:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - {{project_slug}}-network
    restart: unless-stopped
